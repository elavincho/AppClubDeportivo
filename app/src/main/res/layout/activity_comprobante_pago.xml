<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFF6FF"
    android:backgroundTintMode="screen"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        tools:context=".VencimientosActivity">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:padding="16dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Volver"
                android:padding="8dp" />

            <!-- Texto: COMPROBANTE DE PAGO-->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:text="COMPROBANTE DE PAGO"
                android:textColor="#286AB4"
                android:fontFamily="@font/montserrat"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center" />
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Texto: Fecha -->
                <TextView
                    android:id="@+id/tvFecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50sp"
                    android:background="@drawable/bg_text_input"
                    android:padding="15dp"
                    android:text="Fecha"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:alignmentMode="alignMargins"
                    android:columnCount="2"
                    android:columnOrderPreserved="false"
                    android:rowCount="1"
                    android:rowOrderPreserved="false"
                    android:useDefaultMargins="true">

                    <!-- Imagen: img_usuario -->
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:contentDescription="carnet"
                        android:scaleType="centerCrop"
                        android:src="@drawable/usuario"
                        tools:ignore="HardcodedText" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_columnWeight="1"
                        android:background="@drawable/bg_text_input"
                        android:orientation="horizontal">

                        <!-- Texto: Socio Número-->
                        <TextView
                            android:id="@+id/tvNumeroSocio"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_columnWeight="1"
                            android:padding="20dp"
                            android:text="Socio Número"
                            android:textSize="15sp"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>

                </GridLayout>

                <!-- Texto: Nombre -->
                <TextView
                    android:id="@+id/tvNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_text_input"
                    android:padding="15dp"
                    android:text="Nombre"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText" />

                <!-- Texto: Apellido -->
                <TextView
                    android:id="@+id/tvApellido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/bg_text_input"
                    android:padding="15dp"
                    android:text="Apellido"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText" />

                <!-- Texto: Actividad -->
                <TextView
                    android:id="@+id/tvActividad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/bg_text_input"
                    android:padding="15dp"
                    android:text="Actividad"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText" />

                <!-- Texto: Fecha Venc. -->
                <TextView
                    android:id="@+id/tvFechaVencimiento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/bg_text_input"
                    android:padding="15dp"
                    android:text="Fecha Venc."
                    android:textSize="20sp"
                    tools:ignore="HardcodedText" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:alignmentMode="alignMargins"
                    android:columnCount="1"
                    android:columnOrderPreserved="false"
                    android:rowCount="1"
                    android:rowOrderPreserved="false"
                    android:useDefaultMargins="true">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_columnWeight="1"
                        android:orientation="horizontal">

                        <!-- Texto: Método de pago-->
                        <TextView
                            android:id="@+id/tvMetodoPago"
                            android:layout_width="150dp"
                            android:layout_height="60dp"
                            android:layout_columnWeight="1"
                            android:background="@drawable/bg_text_input"
                            android:padding="20dp"
                            android:text="Método de pago"
                            android:textSize="15sp"
                            tools:ignore="HardcodedText" />

                        <!-- Texto: Cuota -->
                        <TextView
                            android:id="@+id/tvCuota"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_columnWeight="1"
                            android:background="@drawable/bg_text_input"
                            android:padding="20dp"
                            android:text="Cuota"
                            android:textSize="15sp"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>
                </GridLayout>

                <!-- Texto: Importe -->
                <TextView
                    android:id="@+id/tvImporte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/bg_text_input"
                    android:padding="15dp"
                    android:text="Importe"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal"
            tools:ignore="UselessLeaf">

            <!-- Espacio flexible entre imágenes -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Imagen: img_descargas -->
            <ImageView
                android:id="@+id/btnDescargar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="descargar"
                android:scaleType="centerCrop"
                android:src="@drawable/descargas"
                android:background="@drawable/bg_boton_circular"
                android:padding="10dp"
                tools:ignore="HardcodedText" />

            <!-- Espacio flexible entre imágenes -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Imagen: img_compartir -->
            <ImageView
                android:id="@+id/btnCompartir"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="compartir"
                android:scaleType="centerCrop"
                android:src="@drawable/compartir"
                android:padding="10dp"
                android:background="@drawable/bg_boton_circular"
                tools:ignore="HardcodedText" />

            <!-- Espacio flexible entre imágenes -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>