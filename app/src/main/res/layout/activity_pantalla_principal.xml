<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFFFF"
    android:backgroundTintMode="screen"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        tools:context=".PantallaPrincipalActivity">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">

            <!-- cardview: esta etiqueta permite redondear la
            imagen y darle un tamaño especifico -->
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="top|center"
                android:layout_marginTop="30sp"
                app:cardCornerRadius="90dp">

                <!-- Imagen: logo_club_deportivo -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="logo_club_deportivo"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icono_club_deportivo"
                    tools:ignore="HardcodedText" />

            </androidx.cardview.widget.CardView>

            <!-- Texto: CLUB DEPORTIVO -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingTop="130sp"
                android:text="CLUB DEPORTIVO"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

        </FrameLayout>

        <!-- Botón Registrar Socios-->
        <Button
            android:id="@+id/btnRegistrarSocios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:backgroundTint="#92C5FC"
            android:text="Registrar Socios"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            tools:ignore="HardcodedText" />

        <!-- Botón Cobrar Cuota-->
        <Button
            android:id="@+id/btnCobrarCuota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:backgroundTint="#92C5FC"
            android:text="Cobrar Cuota"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            tools:ignore="HardcodedText" />

        <!-- Botón Ver Carnet-->
        <Button
            android:id="@+id/btnVerCarnet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:backgroundTint="#92C5FC"
            android:text="Ver Carnet"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            tools:ignore="HardcodedText" />

        <!-- Botón Vencimientos-->
        <Button
            android:id="@+id/btnVencimientos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:backgroundTint="#92C5FC"
            android:text="Vencimientos"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            tools:ignore="HardcodedText" />

        <!-- Botón Lista Socios-->
        <Button
            android:id="@+id/btnListaSocios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:backgroundTint="#92C5FC"
            android:text="Lista Socios / No Socios"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            tools:ignore="HardcodedText" />

        <!-- Botón Salir-->
        <Button
            android:id="@+id/btnSalir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:backgroundTint="#DC143C"
            android:text="Cerrar Sesión"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</ScrollView>

