<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFF6FF"
    android:orientation="vertical"
    tools:context=".VencimientosActivity">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="16dp">

        <ImageView
            android:id="@+id/btnInicio"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Volver"
            android:padding="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Vencimientos Hoy"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- Fecha actual -->
    <TextView
        android:id="@+id/txtFecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_text_input"
        android:padding="12dp"
        android:text="Fecha: "
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_margin="16dp" />

    <!-- Contador de vencimientos -->
    <TextView
        android:id="@+id/txtContadorVencimientos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_text_input"
        android:padding="12dp"
        android:text="Socios con vencimiento hoy: 0"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Lista de socios con vencimientos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewVencimientos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="8dp" />

    <!-- Mensaje cuando no hay vencimientos -->
    <TextView
        android:id="@+id/txtMensajeVacio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸŽ‰ No hay socios con vencimientos hoy"
        android:textSize="18sp"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone" />

</LinearLayout>